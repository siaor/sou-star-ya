{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es5", "es2015.promise","esnext","dom"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "types": [
      "node",
      "vite/client"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "extensions": [".ts", ".tsx", ".js", ".json", ".vue"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "vue-env.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}